<ivysettings>
    <settings defaultResolver="tlb_sample"/>
    <property name="ivy.default.settings.dir" value="jar:file://${ivy.jar.file}!/org/apache/ivy/core/settings" override="true"/>
    <include url="${ivy.default.settings.dir}/ivysettings-public.xml"/>
    <include url="${ivy.default.settings.dir}/ivysettings-shared.xml"/>
    <include url="${ivy.default.settings.dir}/ivysettings-local.xml"/>
    <include url="${ivy.default.settings.dir}/ivysettings-main-chain.xml"/>
    <include url="${ivy.default.settings.dir}/ivysettings-default-chain.xml"/>
    <resolvers>
        <chain name="self-dev">
            <filesystem name="local">
                <artifact pattern="${basedir}/../../tlb/target/[artifact]-[revision].[ext]"/>
            </filesystem>
        </chain>
        <chain name="local-dev-java">
            <filesystem name="local">
                <artifact pattern="${basedir}/../../tlb/java/lib/[artifact]-[revision].[ext]"/>
            </filesystem>
        </chain>
        <chain name="self-dist-server">
            <filesystem name="local">
                <artifact pattern="${basedir}/../../server/[artifact]-[revision].[ext]"/>
            </filesystem>
        </chain>
        <chain name="self-dist-java">
            <filesystem name="local">
                <artifact pattern="${basedir}/../../java/[artifact]-[revision].[ext]"/>
            </filesystem>
        </chain>
        <chain name="local-dist-java">
            <filesystem name="local">
                <artifact pattern="${basedir}/../../java/lib/[artifact]-[revision].[ext]"/>
            </filesystem>
        </chain>
        <chain name="tlb_sample">
            <resolver ref="self-dev"/>
            <resolver ref="local-dev-java"/>
            <resolver ref="self-dist-server"/>
            <resolver ref="self-dist-java"/>
            <resolver ref="local-dist-java"/>
            <resolver ref="default"/>
        </chain>
    </resolvers>
</ivysettings>